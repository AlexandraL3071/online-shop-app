<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="OnlineShopApp" extends="struts-default">

        <action name="register" class="com.shop.actions.RegisterUserAction" method="execute">
            <result name="success">/WEB-INF/views/enterShop.jsp</result>
            <result name="failure">/WEB-INF/views/failedRegistration.jsp</result>
        </action>

        <action name="login" class="com.shop.actions.LoginUserAction" method="execute">
            <result name="success">/WEB-INF/views/enterShop.jsp</result>
            <result name="failure">/WEB-INF/views/failedLogin.jsp</result>
        </action>

        <action name="products" class="com.shop.actions.ProductAction" method="execute">
            <result name="admin">/WEB-INF/views/homepage.jsp</result>
            <result name="logged_user">/WEB-INF/views/userpage.jsp</result>
            <result name="not_logged">/WEB-INF/views/anonymousUserpage.jsp</result>
        </action>

        <action name="adminProducts" class="com.shop.actions.AdminAction" method="execute">
            <result name="success">/WEB-INF/views/adminpage.jsp</result>
            <result name="failure">/WEB-INF/views/addProduct.jsp</result>
            <result name="not_admin_user" type="redirectAction">products</result>
        </action>

        <action name="addProduct">
            <result>/WEB-INF/views/addProduct.jsp</result>
        </action>

        <action name="logout" class="com.shop.actions.LogoutUserAction" method="execute">
            <result name="success">/index.jsp</result>
        </action>

        <action name="cartProducts" class="com.shop.actions.AddToCartAction" method="execute">
            <result name="success" type="redirectAction">productsInCart</result>
        </action>

        <action name="productsInCart" class="com.shop.actions.ProductsInCartAction" method="execute">
            <result name="success">/WEB-INF/views/cart.jsp</result>
        </action>

        <action name="placeOrder" class="com.shop.actions.PlaceOrderAction" method="execute">
            <result name="success">/WEB-INF/views/placeOrder.jsp</result>
        </action>

        <action name="sendOrderDetails" class="com.shop.actions.SendOrderDetailsAction" method="execute">
            <result name="success">/WEB-INF/views/confirmationOrder.jsp</result>
            <result name="error">/WEB-INF/views/errorOrder.jsp</result>
        </action>
    </package>
</struts>
