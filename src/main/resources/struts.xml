<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="OnlineShopApp" extends="struts-default">

        <action name="register" class="com.shop.actions.RegisterUserAction" method="execute">
            <result name="success">/WEB-INF/views/enterShop.jsp</result>
            <result name="failure">/WEB-INF/views/failedRegistration.jsp</result>
        </action>

        <action name="login" class="com.shop.actions.LoginUserAction" method="execute">
            <result name="success">/WEB-INF/views/enterShop.jsp</result>
            <result name="failure">/WEB-INF/views/failedLogin.jsp</result>
        </action>

        <action name="products" class="com.shop.actions.ProductAction" method="execute">
            <result name="success">/homepage.jsp</result>
        </action>

        <action name="adminProducts" class="com.shop.actions.AdminAction" method="execute">
            <result name="success">/adminpage.jsp</result>
            <result name="failed">/addProduct.jsp</result>
        </action>

        <action name="cartProducts" class="com.shop.actions.AddToCartAction" method="execute">
            <result name="success">/cart.jsp</result>
        </action>

        <action name="productsInCart" class="com.shop.actions.ProductsInCartAction" method="execute">
            <result name="success">/cart.jsp</result>
        </action>

    </package>
</struts>
